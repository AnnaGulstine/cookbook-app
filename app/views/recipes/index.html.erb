<% count = 0 %>
<% if @recipes %>
    <div class="row">
        <div class="col-sm-6">
          <%= @recipes.each do |recipe| %>
            <% if recipe.images[0] %>
              <img src=<%= recipe.images[0].src %> class="img-responsive"/>
            <% end %>
            <h1>Recipe Info:</h1>
            <h2>Title: <%= recipe.title %></h2>
            <h2>Ingredients: <%= recipe.ingredients %></h2>
            <h2>Chef: <%= recipe.chef %></h2>
          <% end %>
        </div>
    </div>
  <% end %>