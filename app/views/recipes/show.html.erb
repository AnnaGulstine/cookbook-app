<div class="col-sm-8">
  <h1>Recipe Info:</h1>
  <h2>Title: <a href="/recipes/<%= @recipe.id + 1 %>"><%= @recipe.title %></a></h2>
  <% if @recipe.images[0] %>
    <img src=<%= @recipe.images[0].src %> class="img-responsive" />
  <% end %>
  <h2>Ingredients: <%= @recipe.ingredients %></h2>
  <h2>Chef: <%= @recipe.chef %></h2>
  <h2><a href="/recipes/<%= @recipe.id + 1 %>">Go to next recipe</a></h2>
  <h2><a href="/recipes">See all recipes</a></h2>
</div>